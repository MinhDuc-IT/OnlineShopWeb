@model OnlineShopWeb.Models.User
@{
    ViewBag.Title = "EditUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/User" class="nav-link">Người dùng</a>
        </li>
    </ul>
}

<section class="content">
    <form id="my_form_user_Edit">
        <div class="card-body">
            <div class="card card-default">
                <div class="card-header">
                    <h3 class="card-title">Edit User</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <input hidden type="text" class="form-control" name="Id" value="@Model.CustomerId" />
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" name="Name" value="@Model.Name" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Birth Day</label>
                                <input type="date" class="form-control" name="BirthDay"
                                       value="@(Model.BirthDay.HasValue ? Model.BirthDay.Value.ToString("yyyy-MM-dd") : "")" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" class="form-control" name="Phone" value="@Model.Phone" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Gender</label>
                                <select class="form-control" name="Gender">
                                    <option value="0" @(Model.Gender == 0 ? "selected" : "")>Nam</option>
                                    <option value="1" @(Model.Gender == 1 ? "selected" : "")>Nữ</option>
                                    <option value="2" @(Model.Gender == 2 ? "selected" : "")>Khác</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Address</label>
                                <input type="text" class="form-control" name="Address" value="@Model.Address" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="ad_addImage" for="getUser">Chọn Ảnh</label>
                                <input onchange="handleUploadImage(event)" id="getUser" name="Avatar" style="display:none" type="file" />
                                <div class="ad_prevImage">
                                    <img id="adu_prevImage" src="@((Model.Avatar != null && Model.Avatar.Length > 0) ?
                                     "data:image/png;base64," + Convert.ToBase64String(Model.Avatar)
                                    : "")" alt="Preview Image" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class=" btn btn-primary">Save</button>
                </div>
            </div>

        </div>
    </form>
</section>

@section scripts {
    <script>
        let file;
        const handleUploadImage = (event) => {
            file = event.target.files[0];
            const imgElement = document.getElementById("adu_prevImage");
            imgElement.src = URL.createObjectURL(file);
        };
        $(document).ready(function () {
            $('#my_form_user_Edit').on('submit', function (e) {
                e.preventDefault();

                const urlImage = file;
                var form = document.getElementById('my_form_user_Edit');
                var formData = new FormData(form);
                formData.append("avatar", urlImage);

                $.ajax({
                    type: 'POST',
                    url: '/Admin/User/postEditUser',
                    dataType: 'json',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            toastr.success("Sửa người dùng thành công", "Success");
                            window.location.href = "/Admin/User";
                        }
                    },
                    error: function (xhr, status, error) {
                        toastr.error('An error occurred: ' + error, 'Error');
                    }
                });
            });
        });
    </script>
}
