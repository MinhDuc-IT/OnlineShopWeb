@model IEnumerable<OnlineShopWeb.Models.Product>

@{
    ViewBag.Title = "Product Index";
}

<div style="border:solid 2px; margin: 20px; padding: 20px; border-radius:6px; box-shadow: 2px">
    <h2>Product Managerment</h2>

    <!-- Thanh tìm kiếm -->
    <form method="get" action="@Url.Action("Index")" class="form-inline mb-3" style="display:flex">
        <!-- Dropdown để chọn tiêu chí tìm kiếm -->
        <select name="searchBy" class="form-control" style="width: 200px; height: 50px">
            <option value="ProductName" @(ViewBag.SearchBy == "ProductName" ? "selected" : "")>Product Name</option>
            <option value="Brand" @(ViewBag.SearchBy == "Brand" ? "selected" : "")>Brand</option>
            <option value="Category" @(ViewBag.SearchBy == "Category" ? "selected" : "")>Category</option>
        </select>
        <!-- Input tìm kiếm -->
        <input type="text" name="searchQuery" style="width: 500px; height: 50px" class="form-control mr-sm-2" placeholder="Search..." value="@ViewBag.SearchQuery " />
        <button type="submit" class="btn btn-primary" style="width: 100px; height: 50px; margin-top:0px; border-radius:6px">Search</button>
    </form>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>

<table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        <img src="data:image/jpeg;base64,@product.Image" alt="@product.Name" style="width:150px;height:150px;object-fit:cover;" />
                    </td>

                    <td>@product.Name</td>
                    <td>@product.Brand.Name</td>
                    <td>@product.Category.Name</td>
                    <td>@product.Price.ToString() VNĐ</td>
                    <td>@product.Stock</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = product.ProductId }, new { @class = "btn btn-sm btn-warning" })
                        @Html.ActionLink("Details", "Details", new { id = product.ProductId }, new { @class = "btn btn-sm btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = product.ProductId }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Thanh phân trang -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, searchQuery = ViewBag.SearchQuery, searchBy = ViewBag.SearchBy })">Previous</a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, searchQuery = ViewBag.SearchQuery, searchBy = ViewBag.SearchBy })">@i</a>
                </li>
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, searchQuery = ViewBag.SearchQuery, searchBy = ViewBag.SearchBy })">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>

