@model OnlineShopWeb.Models.Banner
@{
    ViewBag.Title = "Chỉnh sửa Banner";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/banner" class="nav-link">Banner</a>
        </li>
    </ul>
}

<section class="content">
    <form id="my_form">
        <div class="card-body">
            <div class="card card-default">
                <div class="card-header">
                    <h3 class="card-title">Edit Banner</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <input hidden type="text" class="form-control" value="@Model.Id" name="Id" />
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Title</label>
                                <input type="text" class="form-control" value="@Model.title" name="title" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>IsDelete</label>
                                <select class="form-control" name="IsDelete">
                                    <option value="true" @(Model.IsDeleted == true ? "selected" : "")>True</option>
                                    <option value="false" @(Model.IsDeleted == false ? "selected" : "")>False</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Description</label>
                                <input type="text" class="form-control" value="@Model.description" name="description" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="ad_addImage" for="getBanner">Thêm Ảnh</label>
                                <input onchange="handleUploadImage(event)" id="getBanner" name="BannerImage" style="display:none" type="file" />
                                <div class="ad_prevImage">
                                    <img id="adb_prevImage" src="@((Model.Image != null && Model.Image.Length > 0) ?
                                     "data:image/png;base64," + Convert.ToBase64String(Model.Image)
                                    : "")" alt="Preview Image" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class=" btn btn-primary">Save</button>
                </div>
            </div>

        </div>
    </form>
</section>

@section scripts {
    <script>
        let file;
        const handleUploadImage = (event) => {
            file = event.target.files[0];
            const imgElement = document.getElementById("adb_prevImage");
            imgElement.src = URL.createObjectURL(file);
        };
        $(document).ready(function () {
            $('#my_form').on('submit', function (e) {
                e.preventDefault();

                const urlImage = file;
                var form = document.getElementById('my_form');
                var formData = new FormData(form);
                formData.append("urlImage", urlImage);

                $.ajax({
                    type: 'POST',
                    url: '/Admin/Banner/postEditBanner',
                    dataType: 'json',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            alert("Sửa Banner thành công");
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('An error occurred: ' + error);
                    }
                });
            });
        });
    </script>
}


