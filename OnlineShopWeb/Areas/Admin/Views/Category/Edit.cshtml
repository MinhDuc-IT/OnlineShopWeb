@model OnlineShopWeb.Models.Category
@{
    ViewBag.Title = "Sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">Danh mục</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Sửa danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Danh mục</a></li>
                    <li class="breadcrumb-item active">Sửa</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <form id="my_form">
        <div class="card-body">
            <div class="card card-default">
                <div class="card-header">
                    <h3 class="card-title">Sửa danh mục</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <input hidden type="text" class="form-control" name="ID" value="@Model.CategoryId" />
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" name="Name" value="@Model.Name" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Description</label>
                                <input type="text" class="form-control" name="Description" value="@Model.Description" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>IsDelete</label>
                                <select class="form-control" name="IsDelete">
                                    <option value="true" @(Model.IsDeleted == true ? "selected" : "")>True</option>
                                    <option value="false" @(Model.IsDeleted == false ? "selected" : "")>False</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class=" btn btn-primary">Save</button>
                </div>
            </div>

        </div>
    </form>

</section>
<!-- /.content -->

@section scripts {
    <script>
        $(document).ready(function () {
            $('#my_form').on('submit', function (e) {
                e.preventDefault(); 

                var form = document.getElementById('my_form');
                var formData = new FormData(form);

                $.ajax({
                    type: 'POST',
                    url: '/Admin/Category/editCategory', 
                    dataType: 'json',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        alert(response.message);
                    },
                    error: function (xhr, status, error) {
                        alert('An error occurred: ' + error);
                    }
                });
            });
        });
    </script>
}
