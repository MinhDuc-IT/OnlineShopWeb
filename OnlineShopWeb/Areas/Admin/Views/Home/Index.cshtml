@{
    ViewBag.Title = "Index";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Home" class="nav-link">Trang chủ</a>
        </li>
    </ul>
}

<section class="content">
    <div class="row" style="padding-top: 10px">
        <div class="col-md-6" style=" display: flex">
            <label style="margin: 0px" for="datePicker">Chọn ngày:</label>
            <div class="col-md-6">
                <input type="date" id="datePicker" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Doanh thu theo tuần</h3>
                </div>
                <div class="card-body">
                    <canvas id="barChart" style="height: 250px;"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header border-transparent">
            <h3 class="card-title">Latest Orders</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table m-0">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer Name</th>
                            <th>Customer Email</th>
                            <th>Recipient Name</th>
                            <th>Total Amount</th>
                            <th>Order Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix">
        </div>
        <!-- /.card-footer -->
    </div>
</section>


@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const barChartContext = document.getElementById('barChart').getContext('2d');

        const barChart = new Chart(barChartContext, {
            type: 'bar',
            data: {
                labels: ['Thứ Hai', 'Thứ Ba', 'Thứ Tư', 'Thứ Năm', 'Thứ Sáu', 'Thứ Bảy', 'Chủ Nhật'],
                datasets: [{
                    label: 'Doanh thu (VNĐ)',
                    data: [0, 0, 0, 0, 0, 0, 0],
                    backgroundColor: '#00a65a'
                }]
            }
        });

        $(document).ready(function () {
            const today = new Date();
            const formattedDate = today.toISOString().split('T')[0];

            document.getElementById('datePicker').value = formattedDate;

            loadRevenueByDate(formattedDate);

            document.getElementById('datePicker').addEventListener('change', function () {
                const selectedDate = this.value;
                loadRevenueByDate(selectedDate);
            });

            function loadRevenueByDate(selectedDate) {
                $.ajax({
                    type: 'GET',
                    url: '/Admin/Home/GetRevenueByWeek',
                    data: { dateSelected: selectedDate },
                    success: function (response) {
                        if (response.success) {
                            barChart.data.datasets[0].data = response.revenue;
                            barChart.update();
                        } else {
                            toastr.error('Không thể tải dữ liệu doanh thu!', "Error");
                        }
                    },
                    error: function () {
                        toastr.error('Có lỗi xảy ra khi tải dữ liệu doanh thu!', "Error");
                    }
                });
            }
            $.ajax({
                type: 'GET',
                url: '/Admin/Home/GetLatestOrders',
                success: function (response) {
                    if (response.success) {
                        let orders = response.latestOrders;
                        let tbody = '';
                        orders.forEach(order => {
                            tbody += `
                                                <tr>
                                                    <td>${order.OrderId}</td>
                                                    <td>${order.customerName}</td>
                                                    <td>${order.customerEmail}</td>
                                                    <td>${order.RecipientName}</td>
                                                    <td>${order.totalAmount}<sup>đ</sup></td>
                                                    <td>${order.orderDate}</td>
                                                    <td><span class="badge badge-info">${order.Status}</span></td>
                                                </tr>
                                            `;
                        });
                        $('table tbody').html(tbody);
                    } else {
                        toastr.error('Không thể tải dữ liệu đơn hàng!', "Error");
                    }
                },
                error: function () {
                    toastr.error('Đã xảy ra lỗi trong quá trình tải dữ liệu.', "Error");
                }
            });
        });

    </script>
}
