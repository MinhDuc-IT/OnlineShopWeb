@section Scripts {
    <script>

        $(document).ready(function () {

            $('.button-handle').click(function () {
                // Xóa hàng tr chứa nút vừa click
                $(this).closest('tr').remove();
                UpdateSubTotal();
            });

            $('.btn-plus').click(function () {
                var $row = $(this).closest('tr');
                $row.find('.btn-minus').show();

                var $quantityInput = $row.find('.input-quantity');

                var quantity = parseInt($quantityInput.val());
                var price = parseFloat($row.find('td[data-price]').data('price'));

                quantity += 1;
                $quantityInput.val(quantity);

                $row.find('.total-price').text('$' + (quantity * price).toFixed(2));
                UpdateSubTotal();
            })

            $('.btn-minus').click(function () {
                var $row = $(this).closest('tr'); 
                var $quantityInput = $row.find('.input-quantity'); 
                var quantity = parseInt($quantityInput.val()); 
                var price = parseFloat($row.find('td[data-price]').data('price')); // Lấy giá từ thuộc tính data

                if (quantity > 1) {
                    quantity -= 1;
                    $quantityInput.val(quantity); 

                    $row.find('.total-price').text('$' + (quantity * price).toFixed(2));
                }

                if (quantity === 1) {
                    $(this).hide(); 
                } else {
                    $row.find('.btn-minus').show();
                }
                UpdateSubTotal();
            });

            $('.input-quantity').on('input', function () {
                var $row = $(this).closest('tr');
                var quantity = parseInt($(this).val());
                var price = parseFloat($row.find('td[data-price]').data('price'));

                if (quantity >= 1) {
                    $row.find('.total-price').text('$' + (quantity * price).toFixed(2));
                } else {
                    $(this).val(1);
                    $row.find('.total-price').text('$' + price.toFixed(2));
                }
                UpdateSubTotal();
            })


            function UpdateSubTotal() {
                var subtotal = 0;
                $('.total-price').each(function () {
                    var total = parseFloat($(this).text().replace('$', ''));
                    subtotal += total;
                });
                $('.sub-total').text('$' + subtotal.toFixed(2));
                $('.total').text('$' + subtotal.toFixed(2));
            }
        });


    </script>
