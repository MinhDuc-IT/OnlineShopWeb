@model OnlineShopWeb.Models.Order
@{
    Layout = "~/Views/Shared/_OtherLayout.cshtml";
    ViewData["Title"] = "PaymentSuccess";
}

<div class="container text-center">
    <div class="logo-404">
        <a href="@Url.Action("Index", "Home")"><img src="~/Content/images/home/logo.png" alt="Logo" /></a>
    </div>
    <div class="content-404">
        <h1>Payment Process Success</h1>
        <h2 class="text-success">@TempData["Message"]</h2>
        <p>Your payment has been successfully processed. Thank you for your purchase!</p>
        <h2><a href="@Url.Action("myOrder", "Account")">View Your Order</a></h2>
        <h2><a href="@Url.Action("Index", "Home")">Continue Shopping</a></h2>
    </div>
</div>

<script>
    sessionStorage.removeItem('selectedItems');
</script>