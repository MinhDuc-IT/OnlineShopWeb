@section Scripts {
    <script>
        $(document).ready(function () {
            // Handle click on brand
            $(document).on('click', '.brands-name a, .panel-body a', function (e) {
                e.preventDefault(); // Prevent the default anchor click behavior
                var brandId = $(this).data('brand-id');
                if (brandId) {
                    loadProductsByBrand(brandId);
                    $('.brands-name a, .panel-body a').removeClass('active');
                    $(this).addClass('active');
                }
                return false; // Prevent any further action
            });

            // Handle click on category
            $(document).on('click', '.panel-title a[data-category-id]', function (e) {
                e.preventDefault(); // Prevent the default anchor click behavior
                var categoryId = $(this).data('category-id');
                if (categoryId) {
                    loadProductsByCategory(categoryId);
                    $('.panel-title a').removeClass('active');
                    $(this).addClass('active');
                }
                return false; // Prevent any further action
            });

            function loadProductsByBrand(brandId) {
                $.ajax({
                    url: '/Home/GetProductsByBrand',
                    data: { brandId: brandId },
                    type: 'GET',
                    beforeSend: function () {
                        $('.features_items').html('<div class="loading">Loading...</div>');
                    },
                    success: function (result) {
                        $('.features_items').html(result);
                    },
                    error: function (xhr, status, error) {
                        console.log('Error:', error);
                        $('.features_items').html('<div class="error">Error loading products: ' + error + '</div>');
                    }
                });
            }

            function loadProductsByCategory(categoryId) {
                $.ajax({
                    url: '/Home/GetProductsByCategory',
                    data: { categoryId: categoryId },
                    type: 'GET',
                    beforeSend: function () {
                        $('.features_items').html('<div class="loading">Loading...</div>');
                    },
                    success: function (result) {
                        $('.features_items').html(result);
                    },
                    error: function (xhr, status, error) {
                        console.log('Error:', error);
                        $('.features_items').html('<div class="error">Error loading products: ' + error + '</div>');
                    }
                });
            }
        });
    </script>

