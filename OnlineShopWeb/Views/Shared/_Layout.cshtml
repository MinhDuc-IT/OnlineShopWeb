        <script>
            if (localStorage.getItem("userEmail")) {
                document.getElementById("Login").className = "hideButton";
                document.getElementById("Logout").className = "";


            }
            $(document).ready(function () {
                $("#myFormSignup").on("submit", function (e) {

                    e.preventDefault(); // Ngăn chặn form gửi đi theo cách thông thường
                    console.log("dc chay")

                    var name = $("#nameSignUp").val();
                    var password = $("#passwordSignUP").val();
                    var address = $("#address").val()
                    var email = $("#email").val()
                    var phone = $("#phone").val()
                    console.log(name, password, email, phone, address)

                    $.ajax({
                        type: "POST",
                        url: "/Login/Signup", // Đường dẫn đến action trong controller
                        data: { name: name, email: email, password: password, phone: phone, address: address },
                        success: function (response) {
                            if (response.success === true) {
                                // Lưu thông tin vào Local Storage
                                console.log("success")
                                $('#myModalSignup').modal('hide')
                                alert("Sign up successfully")

                            } else {
                                // Hiển thị thông báo lỗi

                                alert(response.Message);
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error("Error details:", xhr.responseText); // In ra phản hồi từ server
                            alert("Có lỗi xảy ra.");
                        }
                    });
                });
            });
            $(document).ready(function () {
                $("#myForm").on("submit", function (e) {

                    e.preventDefault(); // Ngăn chặn form gửi đi theo cách thông thường
                    console.log("dc chay")

                    var name = $("#name").val();
                    var password = $("#Password").val();

                    $.ajax({
                        type: "POST",
                        url: "/Login/Login", // Đường dẫn đến action trong controller
                        data: { name: name, password: password },
                        success: function (response) {
                            if (response.success === true) {
                                // Lưu thông tin vào Local Storage
                                localStorage.setItem("userEmail", response.userEmail);
                                sessionStorage.setItem("Role", response.Role)
                                console.log("success")
                                $('#myModal').modal('hide')
                                alert("Welcome " + response.name)

                                document.getElementById("Login").className = "hideButton";
                                document.getElementById("Logout").className = "";


                            } else {
                                // Hiển thị thông báo lỗi
                                console.log(response.account, response.pas)


                                alert("Sai thông tin đăng nhập ");
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error("Error details:", xhr.responseText); // In ra phản hồi từ server
                            alert("Có lỗi xảy ra trong quá trình đăng nhập.");
                        }
                    });
                });
            });
            document.getElementById("Logout").addEventListener("click", () => {
                document.getElementById("Logout").className = "hideButton";
                document.getElementById("Login").className = "";
                localStorage.removeItem("userEmail")
                sessionStorage.removeItem("Role")

            })
        </script>
