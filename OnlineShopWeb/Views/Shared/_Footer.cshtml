<style>
    body {
        margin: 0;
        overflow-x: hidden;
        font-family: 'Play', sans-serif;
    }

    .footer {
        display: flex;
        flex-direction: column;
        background: #F0F0E9;
        padding: 30px 20px;
        color: #000;
        font-family: 'Play', sans-serif;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 20px;
    }

    .footer-section {
        flex: 1;
        min-width: 200px;
        text-align: center;
    }

        .footer-section h4 {
            font-size: 16px;
            margin-bottom: 15px;
            color: #000;
        }

    /* Payment & Logistics */
    .payment, .logistics {
        display: flex;
        justify-content: center;
        gap: 15px;
        flex-wrap: wrap;
        align-items: center;
    }

        .payment img, .logistics img {
            max-width: 50px;
            height: auto;
            margin: 0;
            transition: transform 0.3s ease;
        }

            .payment img:hover, .logistics img:hover {
                transform: scale(1.1);
            }

    /* Social Icons */
    .social-icons {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

        .social-icons a {
            text-decoration: none;
            color: #000;
            font-size: 1.8em;
            transition: transform 0.3s ease;
            outline: none;
        }

            .social-icons a:hover {
                transform: scale(1.2);
                outline: none;
            }

    /* About Shop */
    .footer-section ul {
        list-style: none;
        padding: 0;
    }

        .footer-section ul li {
            margin-bottom: 10px;
        }

            .footer-section ul li a {
                text-decoration: none;
                color: #000;
                transition: color 0.3s ease;
            }

                .footer-section ul li a:hover {
                    color: #777;
                }

    /* Copyright */
    .footer-copyright {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
    }
</style>

