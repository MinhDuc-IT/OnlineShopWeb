@model OnlineShopWeb.Models.Product
@{
    ViewBag.Title = "Detail";
}

<div class="container">
    <div class="row">
        <div class="container">
            <div class="row">
                <h2 class="title text-center"></h2>
                <div class="col-sm-3">
                    @Html.Partial("_SidebarPartial")
                </div>
                <div class="col-sm-9 padding-right">
                    <h2 class="title text-center">Product Detail</h2>
                    <div class="product-details" style="margin-bottom: 0px">
                        <!-- Product Details -->
                        <div class="col-sm-5">
                            <div class="view-product">
                                <img src="data:image/jpeg;base64,@Model.Image" alt="@Model.Name" class="product-image" />
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div class="product-information">
                                <!-- Product Information -->
                                <h2>@Model.Name</h2>
                                <p>Web ID: @Model.ProductId</p>
                                <div class="product-price">
                                    <span>US @Model.Price.ToString("N0") VNĐ</span>
                                </div>
                                <div class="product-actions">
                                    <label for="quantity_value">Quantity:</label>
                                    <div class="quantity-wrapper">
                                        <button class="quantity-btn" id="decrease">-</button>
                                        <div id="quantity_value" class="quantity-display" contenteditable="true">1</div>
                                        <button class="quantity-btn" id="increase">+</button>
                                    </div>
                                    <a href="#" class="btn btn-default cart btnAddToCart" data-id="@Model.ProductId" style="margin-left: 0px;">
                                        <i class="fa fa-shopping-cart"></i> Add to cart
                                    </a>
                                </div>
                                <p><b>Availability:</b> @(Model.Stock > 0 ? "In stock" : "Out of stock")</p>
                                <p><b>Condition:</b> New</p>
                                <p><b>Brand:</b> @Model.Brand.Name</p>

                            </div>
                        </div>
                    </div>

                    <!-- Product Description -->
                    <div class="product-description">
                        <h3>Product Description</h3>
                        <p>@Html.Raw(@Model.Description)</p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/Content/css/ProductDetail.css" rel="stylesheet" />
<script src="~/Scripts/ProductDetail.js"></script>